@{
    ViewData["Title"] = Localizer["HomeIndexTitle"];
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Maison.svg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Maison du Whisky
                    <a class="btn btn-default" href="https://www.whisky.fr/">
                        @Localizer["Learn"]
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Bacchus.svg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Le Repaire de Bacchus
                    <a class="btn btn-default" href="https://www.lerepairedebacchus.com/">
                        @Localizer["Learn"]
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Nicolas.svg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Nicolas
                    <a class="btn btn-default" href="https://www.nicolas.com/fr/">
                        @Localizer["Learn"]
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Decanteur.svg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Le Decanteur
                    <a class="btn btn-default" href="http://www.ledecanteur.com/">
                        @Localizer["Learn"]
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">@Localizer["Previous"]</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">@Localizer["Next"]</span>
    </a>
</div>