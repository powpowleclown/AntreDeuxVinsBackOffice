@model AntreDeuxVinsModel.Cave

@{
    ViewData["Title"] = Localizer["Details"]+"-"+ Localizer["Cave"];
}

<h2>@Localizer["Details"]</h2>

<div>
    <h4>@Localizer["Cave"]</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">@Localizer["Edit"]</a>
</div>
@await Html.PartialAsync("/Views/Caves/CaveVins.cshtml", Model.Vins, new ViewDataDictionary(this.ViewData) { { "CaveId", Model.Id } })
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
