@model AntreDeuxVinsModel.Region

@{
    ViewData["Title"] = Localizer["Details"]+"-"+ Localizer["Regions"];
}

<h2>@Localizer["Details"]</h2>

<div>
    <h4>@Localizer["Regions"]</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Pays)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Pays.Nom)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-Parent="@ViewBag.Parent">@Localizer["Edit"]</a> |
    @if (@ViewBag.Parent == null)
    {
        <a asp-action="Index">@Localizer["Back"]</a>
    }
    else
    {
        <a asp-action="Details" asp-controller="Pays" asp-route-id="@ViewBag.Parent" asp-area="BackOffice">@Localizer["Back"]</a>
    }
</div>
