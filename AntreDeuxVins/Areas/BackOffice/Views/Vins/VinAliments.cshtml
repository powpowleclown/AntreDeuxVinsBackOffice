@model IEnumerable<AntreDeuxVinsModel.VinAliment>
@{
    ViewData["Title"] = Localizer["VinAliments"];
}

<h4>@Localizer["Aliments"]</h4>

<p>
    <a asp-area="BackOffice" asp-controller="Aliments" asp-action="CreateByVin" asp-route-id="@ViewData["VinId"]" asp-route-ParentParent="@ViewData["ParentParent"]">@Localizer["CreateNew"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Aliment.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aliment.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Aliment.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aliment.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-controller="Aliments" asp-area="BackOffice" asp-route-id="@item.Aliment.Id" asp-route-Parent="@ViewData["VinId"]" asp-route-ParentParent="@ViewData["ParentParent"]">@Localizer["Edit"]</a> |
                <a asp-action="Details" asp-controller="Aliments" asp-area="BackOffice" asp-route-id="@item.Aliment.Id" asp-route-Parent="@ViewData["VinId"]" asp-route-ParentParent="@ViewData["ParentParent"]">@Localizer["Details"]</a> |
                <a asp-action="Delete" asp-controller="Aliments" asp-area="BackOffice" asp-route-id="@item.Aliment.Id" asp-route-Parent="@ViewData["VinId"]" asp-route-ParentParent="@ViewData["ParentParent"]">@Localizer["Delete"]</a>
            </td>
        </tr>
            }
        }
        else
        {
            <tr>
                <td>
                    <p>No Data</p>
                </td>
            </tr>
        }

    </tbody>
</table>

