@model AntreDeuxVinsModel.LocalizableEntity

@{
    ViewData["Title"] = Localizer["Edit"]+"-"+ Localizer["Entity"];
}

<h2>@Localizer["Edit"]</h2>

<h4>@Localizer["Entity"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="EntityName" class="control-label"></label>
                <select asp-for="EntityName" asp-items="ViewBag.Entitys" class="form-control">
                    <option>Select</option>
                </select>
                <span asp-validation-for="PrimaryKeyFieldName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrimaryKeyFieldName" class="control-label"></label>
                <input asp-for="PrimaryKeyFieldName" class="form-control" />
                <span asp-validation-for="PrimaryKeyFieldName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["Back"]</a>
</div>

